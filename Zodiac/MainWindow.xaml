<Window x:Class="Zodiac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Age and Zodiac1 Calculator" Height="250" Width="350">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Виберіть дату народження:"/>
            <DatePicker SelectedDate="{Binding BirthDate, Mode=TwoWay}"/>
            <TextBlock Text="{Binding AgeText}" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Західний знак зодіаку:"/>
            <TextBlock Text="{Binding WesternZodiac}" FontWeight="Bold" Margin="5"/>
            <TextBlock Text="Китайський знак зодіаку:"/>
            <TextBlock Text="{Binding ChineseZodiac}" FontWeight="Bold" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
